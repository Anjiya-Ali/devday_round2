doctype html
html(lang="en-US" dir="ltr")
  head
    title Google Classroom
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/assets/css/single_class.css")
  body
    nav.navbar.navbar-expand-lg.anavbar-light.bg-light.px-0.py-3
        .container-xl
            a.navbar-brand(href='#') Google classroom
            button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
            .collapse.navbar-collapse#navbarCollapse
            .navbar-nav.mx-lg-auto
                a.nav-item.nav-link.active(href='#') Stream
                a.nav-item.nav-link(href=`/classes/classes.class_id/classwork`) Classwork
                a.nav-item.nav-link(href='#') People
                a.nav-item.nav-link(href='#') Grades
    #wrapper
        #sidebar-wrapper
            ul.sidebar-nav
                li.sidebar-brand
                    a(href='#') Class Code : #classes.code
                //- ${classes.code}

        #page-content-wrapper
            .container-fluid
            .row
                .col-lg-12 
                h1 #{classes.name}
                a.btn.btn-primary.mybutton(data-bs-toggle="modal", data-bs-target="#exampleModal") Create
                div.row.row-cols-1.row-cols-sm-2.row-cols-md-3.g-3
                    div.col
                        div.card
                            div.card-header
                                h5.card-title  #{classes.title + "  DUE  " + classes.duedate}
                            div.card-body
                                p.card-text #{classes.instructions}
                        div.modal.fade(id="exampleModal", tabindex="-1", aria-labelledby="exampleModalLabel", aria-hidden="true")
                            div.modal-dialog
                                div.modal-content
                                    div.modal-header
                                        h5.modal-title#exampleModalLabel Create Assignment
                                        button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
                                    div.modal-body
                                        form(action=`/classes/${classes.class_id}/create_assignment` method="post")
                                            div.mb-3
                                                label.form-label(for="exampleFormControlInput1") Title
                                                input.form-control(type="text", id="exampleFormControlInput1", name = "title")
                                            div.mb-3
                                                label.form-label(for="exampleFormControlTextarea1") Instructions
                                                textarea.form-control(id="exampleFormControlTextarea1", type="textarea", rows=3, name = "instructions")
                                            div.mb-3
                                                label.form-label(for="exampleFormControlTextarea2") Points
                                                textarea.form-control(id="exampleFormControlTextarea2", type="number", name = "points")
                                            div.mb-3
                                                label.form-label(for="exampleFormControlTextarea3") Due Date
                                                textarea.form-control(id="exampleFormControlTextarea3", type="number", name = "date" )
                                            button.btn.btn-primary(type="submit") Create
        


    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js")